# ============================================
# REQUIRED: Google Cloud APIs
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
# Enable: Gemini API, Cloud Speech-to-Text API, Cloud Text-to-Speech API
GOOGLE_API_KEY=your_google_api_key_here

# Model Configuration
GEMINI_MODEL=gemini-2.5-flash
EMBEDDING_MODEL=models/gemini-embedding-001

# ============================================
# OPTIONAL: Web Search
# ============================================
# Get your API key from: https://tavily.com
# Enables real-time web search capabilities
TAVILY_API_KEY=tvly-your-api-key-here

# ============================================
# OPTIONAL: Telegram Bot
# ============================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Get your user ID from @userinfobot on Telegram
TELEGRAM_USER_ID=123456789

# Whitelist: comma-separated user IDs allowed to chat with the bot
# SECURITY: Leave empty to allow everyone (NOT recommended for production)
TELEGRAM_WHITELIST=123456789,987654321

# ============================================
# OPTIONAL: Visual Avatar
# ============================================
# Get API key from: https://simli.com
# Enables 3D avatar in the web interface
SIMLI_API_KEY=your_simli_api_key
SIMLI_FACE_ID=your_face_id

# ============================================
# SERVICE CONFIGURATION (Auto-configured)
# ============================================
# These are automatically configured by Docker Compose
# Only change if you're not using the default docker-compose setup

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DATABASE=ai_assistant

# ChromaDB Configuration
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000

# Voice Configuration
TTS_VOICE=en-US-Chirp3-HD-Leda
TTS_VOICE_AR=ar-XA-Chirp3-HD-Leda
AUDIO_SAMPLE_RATE=16000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Personality Name
PERSONALITY_NAME=Hope
